[client]
# host or IP and optional port
hawkbit_server            = eagle.wattsense.com

# true = HTTPS, false = HTTP
ssl                       = true

# validate ssl certificate (only use if ssl is true)
ssl_verify                = true

# Certificate Authority (CA) bundle (optionnal)
ca_info = /etc/certs/cabundle.pem

# Tenant id
tenant_id                 = DEFAULT

# Target name (controller id)
target_name               = <device-id>

# Security token
auth_token                = <device-id>

# Or gateway_token can be used instead of auth_token
#gateway_token             = cb115a721af28f781b493fa467819ef5

# Temporary file RAUC bundle should be downloaded to
bundle_download_location  = /tmp/bundle.raucb

# Polling file to trigger a poll
polling_trigger_file  = /tmp/hawkbit_poll

# time in seconds to wait before retrying
retry_wait                = 60

# connection timeout in seconds
connect_timeout           = 20

# request timeout in seconds
timeout                   = 60

# debug, info, message, critical, error, fatal
log_level                 = error

# Every key / value under [device] is sent to HawkBit (target attributes),
# and can be used in target filter.
[device]
HW_NAME                   = <hw-name>
ROOTFS_VERS               = <rootfs-vers>
APP_VERS                  = <app-vers>
